<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script&family=Great+Vibes&family=Parisienne&family=Poppins:wght@300;400&family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <title>Our Romantic Greeting Card ‚ù§Ô∏è</title>
    <style>
        :root {
            --bg-dark: #1E1E1E;
            --burgundy: #7a1f2a;
            --gold: #d4af37;
            --text-light: #EAEAEA;
            --accent: #4A90E2;
            --border: #333333;
        }

        body {
            background: var(--bg-dark);
            font-family: 'Montserrat', sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 40px 20px;
            margin: 0;
            color: var(--text-light);
        }

        #site-header {
            text-align: center;
            margin-bottom: 25px;
        }

        #site-header h1 {
            font-size: 1.9rem;
            color: var(--accent);
            margin-bottom: 8px;
        }

        .promo-text {
            font-size: 1rem;
            opacity: 0.85;
            margin-bottom: 6px;
        }

        .promo-link {
            color: var(--accent);
            font-weight: 600;
            text-decoration: none;
        }

        .config-panel {
            background: #222;
            padding: 25px;
            border-radius: 16px;
            margin-bottom: 40px;
            max-width: 500px;
            width: 100%;
            border: 1px solid var(--border);
        }

        .input-group {
            margin-bottom: 15px;
        }

        .input-group label {
            font-weight: 600;
            color: var(--accent);
            display: block;
            margin-bottom: 6px;
        }

        input[type="text"], input[type="file"], select {
            width: 100%;
            padding: 12px;
            border: 1px solid var(--border);
            border-radius: 10px;
            background: #111;
            color: var(--text-light);
            box-sizing: border-box;
        }

        #printable-card {
            width: 380px;
            min-height: 450px;
            background: #111;
            border-radius: 18px;
            padding: 25px;
            display: flex;
            flex-direction: column;
            align-items: center;
            border: 4px solid var(--accent);
            transition: 0.3s ease;
        }

        #printable-card.theme-romantic {
            background: #ffe6ea;
            color: #7a1f2a;
            border-color: #ff4d6d;
        }

        #printable-card.theme-cute {
            background: #fff4fb;
            color: #ff69b4;
            border-color: #ff9ad5;
        }

        #printable-card.theme-elegant {
            background: #f7f3e9;
            color: #5a4634;
            border-color: #c6a667;
        }

        .photo-container {
            display: flex;
            gap: 15px;
            width: 100%;
            height: 200px;
            margin-top: 20px;
        }

        .photo-box {
            flex: 1;
            border-radius: 12px;
            overflow: hidden;
            background: #2a2a2a;
            border: 1px solid var(--border);
        }

        .photo-box img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: none;
        }

        #card-text {
            margin-top: 25px;
            text-align: center;
            font-style: italic;
            font-size: 1.2rem;
        }

        .btn-group {
            margin-top: 30px;
            display: flex;
            gap: 10px;
        }

        button {
            padding: 12px 25px;
            border-radius: 30px;
            border: none;
            cursor: pointer;
            font-weight: bold;
        }

        .btn-save { background: #28a745; color: white; }
        .btn-print { background: var(--accent); color: white; }

        @media print {
            .config-panel, .btn-group, #site-header { display: none !important; }
        }
    </style>
</head>
<body>

    <div id="site-header">
        <h1>üíå Greeting Card Creator</h1>
        <p class="promo-text">An ArtMera project - Personalized Gifts & Engravings</p>
        <a href="https://artmera.wordpress.com/" target="_blank" class="promo-link">Visit ArtMera Official Page</a>
    </div>

    <div class="config-panel">
        <div class="input-group">
            <label>His Photo:</label>
            <input type="file" onchange="preview(this, 'img-him')">
        </div>
        <div class="input-group">
            <label>His Name:</label>
            <input type="text" id="name-him" placeholder="Enter his name..." onkeyup="updateNames()">
        </div>
        <div class="input-group">
            <label>Her Photo:</label>
            <input type="file" onchange="preview(this, 'img-her')">
        </div>
        <div class="input-group">
            <label>Her Name:</label>
            <input type="text" id="name-her" placeholder="Enter her name..." onkeyup="updateNames()">
        </div>
        <div class="input-group">
            <label>Romantic Message:</label>
            <select id="auto-messages" onchange="setAutoMessage()">
                <option value="">‚Äî Select a message ‚Äî</option>
                <option value="I love you more than words can say.">I love you more than words can say.</option>
                <option value="With you, every day becomes special.">With you, every day becomes special.</option>
                <option value="You are my favorite person in the entire universe.">You are my favorite person in the entire universe.</option>
            </select>
            <input type="text" id="text-input" placeholder="Or write your own..." onkeyup="updateText()" style="margin-top:10px">
        </div>
        <div class="input-group">
            <label>Theme & Font:</label>
            <select id="theme-select" onchange="changeTheme()" style="margin-bottom:10px">
                <option value="dark">Dark Modern</option>
                <option value="romantic">Romantic ‚ù§Ô∏è</option>
                <option value="cute">Cute üå∏</option>
                <option value="elegant">Elegant ‚ú®</option>
            </select>
            <select id="font-select" onchange="changeFont()">
                <option value="'Poppins', sans-serif">Modern</option>
                <option value="'Dancing Script', cursive">Dancing Script</option>
                <option value="'Great Vibes', cursive">Great Vibes</option>
                <option value="'Parisienne', cursive">Parisienne</option>
            </select>
        </div>
    </div>

    <div id="printable-card">
        <div id="display-names" style="font-weight: bold; font-size: 1.3rem;">He ‚ù§Ô∏è She</div>
        <div class="photo-container">
            <div class="photo-box"><img id="img-him"></div>
            <div class="photo-box"><img id="img-her"></div>
        </div>
        <div id="card-text">Your romantic message will appear here...</div>
    </div>

    <div class="btn-group">
        <button class="btn-save" onclick="saveAsImage()">Save as PNG</button>
        <button class="btn-print" onclick="window.print()">Print / PDF</button>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/html2canvas@1.4.1/dist/html2canvas.min.js"></script>
    <script>
        function preview(input, targetId) {
            const file = input.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = (e) => {
                    const img = document.getElementById(targetId);
                    img.src = e.target.result;
                    img.style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        }

        function updateNames() {
            const him = document.getElementById("name-him").value || "He";
            const her = document.getElementById("name-her").value || "She";
            document.getElementById("display-names").innerText = him + " ‚ù§Ô∏è " + her;
        }

        function updateText() {
            const val = document.getElementById('text-input').value;
            document.getElementById('card-text').innerText = val || "Your romantic message will appear here...";
        }

        function setAutoMessage() {
            const msg = document.getElementById("auto-messages").value;
            if (msg) {
                document.getElementById("text-input").value = msg;
                updateText();
            }
        }

        function changeTheme() {
            const theme = document.getElementById("theme-select").value;
            const card = document.getElementById("printable-card");
            card.className = (theme === "dark") ? "" : "theme-" + theme;
        }

        function changeFont() {
            const font = document.getElementById("font-select").value;
            document.getElementById("printable-card").style.fontFamily = font;
        }

        function saveAsImage() {
            const imgHim = document.getElementById("img-him").src;
            const imgHer = document.getElementById("img-her").src;

            if (!imgHim || !imgHer) {
                alert("‚ö†Ô∏è Please upload both photos before saving!");
                return;
            }

            const card = document.getElementById("printable-card");
            html2canvas(card, { scale: 2 }).then(canvas => {
                const link = document.createElement("a");
                link.download = "romantic-card.png";
                link.href = canvas.toDataURL();
                link.click();
            });
        }
    </script>
</body>
</html>
